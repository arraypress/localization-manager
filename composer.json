{
  "name": "arraypress/localization-manager",
  "description": "A robust utility for managing localized text and content across different WordPress plugins, offering centralized registration, storage, and retrieval of translations.",
  "homepage": "https://github.com/arraypress/localization-manager/",
  "type": "library",
  "license": "GPL-2.0-or-later",
  "authors": [
    {
      "name": "David Sherlock",
      "homepage": "https://arraypress.com/"
    }
  ],
  "config": {
    "optimize-autoloader": true,
    "sort-packages": true
  },
  "require": {
    "php": "^7.4 || ^8.0"
  },
  "autoload": {
    "psr-4": {
      "ArrayPress\\": "src/"
    },
    "files": [
      "src/Functions.php"
    ]
  },
  "minimum-stability": "dev",
  "prefer-stable": true,
  "support": {
    "issues": "https://github.com/arraypress/localization-manager/issues",
    "source": "https://github.com/arraypress/localization-manager"
  },
  "keywords": [
    "wordpress",
    "localization",
    "translation",
    "internationalization",
    "plugin-development",
    "i18n"
  ]
}